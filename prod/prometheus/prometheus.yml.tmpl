global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "kafka-exporter"
    static_configs:
      - targets:
          - ${KAFKA_BROKER_1}:9038
          - ${KAFKA_BROKER_2}:9038

  - job_name: "ecs-services"
    metrics_path: /actuator/prometheus
    file_sd_configs:
      - files:
          - /etc/prometheus/targets/targets.json