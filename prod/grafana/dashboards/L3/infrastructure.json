{
  "editable": true,
  "panels": [
    {
      "datasource": "CloudWatch",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "namespace": "AWS/ECS",
          "metricName": "CPUUtilization",
          "dimensions": {
            "ClusterName": "jumunhasyeo-dev-cluster",
            "ServiceName": "jumunhasyeo-dev-$service"
          },
          "region": "ap-northeast-2",
          "statistics": ["Average"],
          "period": "60s"
        }
      ],
      "title": "‚òÅÔ∏è AWS ECS CPU Utilization (CloudWatch)",
      "type": "timeseries"
    },
    {
      "datasource": "CloudWatch",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "namespace": "AWS/ECS",
          "metricName": "MemoryUtilization",
          "dimensions": {
            "ClusterName": "jumunhasyeo-dev-cluster",
            "ServiceName": "jumunhasyeo-dev-$service"
          },
          "region": "ap-northeast-2",
          "statistics": ["Average"],
          "period": "60s"
        }
      ],
      "title": "‚òÅÔ∏è AWS ECS Memory Utilization (CloudWatch)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "targets": [
        { "expr": "system_cpu_usage{job=~\".*$service.*\"}", "legendFormat": "JVM CPU" }
      ],
      "title": "üñ•Ô∏è Prometheus CPU Usage (System)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
      "targets": [
        { "expr": "jvm_memory_used_bytes{job=~\".*$service.*\", area=\"heap\"}", "legendFormat": "Used" }
      ],
      "title": "JVM Heap Memory Usage",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
      "targets": [
        { "expr": "rate(jvm_gc_pause_seconds_sum{job=~\".*$service.*\"}[1m])", "legendFormat": "GC" }
      ],
      "title": "Garbage Collection Duration",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "targets": [
        { "expr": "jvm_threads_live_threads{job=~\".*$service.*\"}", "legendFormat": "Threads" }
      ],
      "title": "Live Thread Count",
      "type": "timeseries"
    }
  ],
  "templating": {
    "list": [
      {
        "datasource": "Prometheus",
        "definition": "label_values(up{job=~\"jumunhasyeo.*\"}, container_name)",
        "name": "service",
        "query": "label_values(up{job=~\"jumunhasyeo.*\"}, container_name)",
        "refresh": 1,
        "type": "query",
        "label": "Service Name"
      }
    ]
  },
  "title": "Level 3 - Infrastructure Dashboard",
  "uid": "l3-infra-view"
}