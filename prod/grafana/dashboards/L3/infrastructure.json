{
  "editable": true,
  "panels": [
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "aws_ecs_cpuutilization_average{dimension_ClusterName=\"jumunhasyeo-dev-cluster\", dimension_ServiceName=~\"jumunhasyeo-dev-$service.*\"}",
          "legendFormat": "ECS CPU ({{dimension_ServiceName}})",
          "refId": "A"
        }
      ],
      "title": "üõ°Ô∏è AWS ECS CPU Utilization (via YACE)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "aws_ecs_memory_utilization_average{dimension_ClusterName=\"jumunhasyeo-dev-cluster\", dimension_ServiceName=~\"jumunhasyeo-dev-$service.*\"}",
          "legendFormat": "ECS Memory ({{dimension_ServiceName}})",
          "refId": "A"
        }
      ],
      "title": "üõ°Ô∏è AWS ECS Memory Utilization (via YACE)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 },
      "targets": [
        { "expr": "system_cpu_usage{job=~\".*$service.*\"}", "legendFormat": "JVM CPU", "refId": "A" }
      ],
      "title": "üñ•Ô∏è Prometheus CPU Usage (System)",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 8 },
      "targets": [
        { "expr": "jvm_memory_used_bytes{job=~\".*$service.*\", area=\"heap\"}", "legendFormat": "Used", "refId": "A" }
      ],
      "title": "JVM Heap Memory Usage",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
      "targets": [
        { "expr": "rate(jvm_gc_pause_seconds_sum{job=~\".*$service.*\"}[1m])", "legendFormat": "GC", "refId": "A" }
      ],
      "title": "Garbage Collection Duration",
      "type": "timeseries"
    },
    {
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "targets": [
        { "expr": "jvm_threads_live_threads{job=~\".*$service.*\"}", "legendFormat": "Threads", "refId": "A" }
      ],
      "title": "Live Thread Count",
      "type": "timeseries"
    }
  ],
  "templating": {
    "list": [
      {
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "definition": "label_values(up{job=~\"jumunhasyeo.*\"}, container_name)",
        "name": "service",
        "query": "label_values(up{job=~\"jumunhasyeo.*\"}, container_name)",
        "refresh": 1,
        "type": "query",
        "label": "Service Name"
      }
    ]
  },
  "title": "Level 3 - Infrastructure Dashboard (Prometheus Integrated)",
  "uid": "l3-infra-view"
